<Window x:Class="TrayStats.Views.DashboardPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:comp="clr-namespace:TrayStats.Views.Components"
        Title="TrayStats"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="340"
        Background="Transparent"
        Deactivated="Window_Deactivated">

    <Border Background="#E6202020"
            CornerRadius="8"
            BorderBrush="#40FFFFFF"
            BorderThickness="1"
            Margin="4"
            Padding="8,4">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="4,2,4,6">
                <TextBlock Text="TrayStats" FontSize="11" Foreground="#80FFFFFF"
                           FontWeight="SemiBold"/>
                <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                        HorizontalAlignment="Right" VerticalAlignment="Center"
                        Background="Transparent" Foreground="#80FFFFFF" BorderThickness="0"
                        Cursor="Hand" Padding="4,2" Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- ==================== Weather Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="WeatherRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Weather.WeatherIcon}" FontFamily="Segoe UI Symbol"
                                       FontSize="22" Foreground="#FFFFC107" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Weather.City}" Foreground="#B0FFFFFF" FontSize="11"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Weather.Temperature, StringFormat={}{0:F0}°}"
                                               Foreground="#DDFFFFFF" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Weather.WeatherCondition}"
                                               Foreground="#80FFFFFF" FontSize="11" VerticalAlignment="Bottom" Margin="6,0,0,2"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- Weather Detail Panel -->
                    <StackPanel Visibility="{Binding IsWeatherDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Feels Like"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Weather.FeelsLike, StringFormat={}{0:F0}°C}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Humidity"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Weather.Humidity, StringFormat={}{0}%}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Wind"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Weather.WindSpeed, StringFormat={}{0:F0} km/h}"/>
                            </Grid>
                        </Border>

                        <!-- 3-day forecast -->
                        <ItemsControl ItemsSource="{Binding Weather.Forecast}" Margin="0,4,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#15FFFFFF" CornerRadius="4" Padding="6,4" Margin="2,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding DayName}" Foreground="#90FFFFFF" FontSize="10"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding WeatherIcon}" FontFamily="Segoe UI Symbol"
                                                       FontSize="18" Foreground="#FFFFC107" HorizontalAlignment="Center" Margin="0,2"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding High, StringFormat={}{0:F0}°}"
                                                           Foreground="#DDFFFFFF" FontSize="10" FontWeight="SemiBold"/>
                                                <TextBlock Text=" / " Foreground="#60FFFFFF" FontSize="10"/>
                                                <TextBlock Text="{Binding Low, StringFormat={}{0:F0}°}"
                                                           Foreground="#80FFFFFF" FontSize="10"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding PrecipitationProbability, StringFormat={}{0}% rain}"
                                                       Foreground="#60FFFFFF" FontSize="9" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== CPU Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="CpuRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="60">
                            <TextBlock Text="CPU" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding CpuSummary}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <comp:SparklineChart x:Name="CpuChart" Grid.Column="1" Height="40" Margin="4,0"
                            Values="{Binding CpuValues}"
                            StrokeColor="#FF4CAF50" MinValue="0" MaxValue="100"/>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- CPU Detail Panel -->
                    <StackPanel Visibility="{Binding IsCpuDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Cpu.Name}"
                                           Foreground="#B0FFFFFF" FontSize="11" Margin="0,0,0,4"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Temperature"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Cpu.Temperature, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0}°C'}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Max Clock"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Cpu.Clock, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} MHz'}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Package Power"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Cpu.PackagePower, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F1} W'}"/>
                            </Grid>
                        </Border>

                        <!-- Per-core bars -->
                        <ItemsControl ItemsSource="{Binding Cpu.Cores}" Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Foreground="#90FFFFFF" FontSize="10"
                                                   Text="{Binding CoreIndex, StringFormat=Core {0}}" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#20FFFFFF" CornerRadius="2" Height="6"
                                                VerticalAlignment="Center" Margin="4,0">
                                            <Border Background="#4CAF50" CornerRadius="2" HorizontalAlignment="Left"
                                                    Width="{Binding Usage, Converter={StaticResource PercentToWidth}}"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Foreground="#90FFFFFF" FontSize="10"
                                                   Text="{Binding Usage, StringFormat={}{0:F0}%}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== GPU Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="GpuRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="60">
                            <TextBlock Text="GPU" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding GpuSummary}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <comp:SparklineChart x:Name="GpuChart" Grid.Column="1" Height="40" Margin="4,0"
                            Values="{Binding GpuValues}"
                            StrokeColor="#FF00BFFF" MinValue="0" MaxValue="100"/>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- GPU Detail Panel -->
                    <StackPanel Visibility="{Binding IsGpuDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Gpu.Name}"
                                           Foreground="#B0FFFFFF" FontSize="11" Margin="0,0,0,4"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Temperature"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.Temperature, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0}°C'}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Core Clock"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.CoreClock, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} MHz'}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Memory Clock"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.MemoryClock, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} MHz'}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="VRAM Used"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.MemoryUsed, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} MB'}"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Fan Speed"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.FanSpeed, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} RPM'}"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Power"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Gpu.Power, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F1} W'}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== RAM Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="RamRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="60">
                            <TextBlock Text="RAM" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding RamSummary}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <comp:SparklineChart x:Name="RamChart" Grid.Column="1" Height="40" Margin="4,0"
                            Values="{Binding RamValues}"
                            StrokeColor="#FF9C27B0" MinValue="0" MaxValue="100"/>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- RAM Detail Panel -->
                    <StackPanel Visibility="{Binding IsRamDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Used"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Ram.UsedGb, StringFormat={}{0:F1} GB}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Available"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Ram.AvailableGb, StringFormat={}{0:F1} GB}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Total"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Ram.TotalGb, StringFormat={}{0:F1} GB}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Load"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Ram.Load, StringFormat={}{0:F1}%}"/>
                            </Grid>
                        </Border>

                        <!-- RAM usage bar -->
                        <Grid Margin="0,4,0,0">
                            <Border Background="#20FFFFFF" CornerRadius="3" Height="10"/>
                            <Border Background="#9C27B0" CornerRadius="3" Height="10"
                                    HorizontalAlignment="Left"
                                    Width="{Binding Ram.Load, Converter={StaticResource PercentToWidthLarge}}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== Disk Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="DiskRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="60">
                            <TextBlock Text="Disk" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding DiskSummary}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <!-- Disk bar chart area -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding Disk.Drives}"
                                      VerticalAlignment="Center" Margin="8,4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="28"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="36"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" Foreground="#B0FFFFFF"
                                                   FontSize="10" VerticalAlignment="Center"/>
                                        <Border Grid.Column="1" Background="#20FFFFFF" CornerRadius="2"
                                                Height="6" VerticalAlignment="Center">
                                            <Border Background="#FF9800" CornerRadius="2" HorizontalAlignment="Left"
                                                    Width="{Binding UsagePercent, Converter={StaticResource PercentToWidth}}"/>
                                        </Border>
                                        <TextBlock Grid.Column="2" Foreground="#90FFFFFF" FontSize="10"
                                                   Text="{Binding UsagePercent, StringFormat={}{0:F0}%}"
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- Disk Detail Panel -->
                    <StackPanel Visibility="{Binding IsDiskDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <ItemsControl ItemsSource="{Binding Disk.Drives}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                                        <StackPanel>
                                            <TextBlock Foreground="#B0FFFFFF" FontSize="11" FontWeight="SemiBold"
                                                       Margin="0,0,0,4">
                                                <Run Text="{Binding Name, Mode=OneWay}"/>
                                                <Run Text=" - " Foreground="#60FFFFFF"/>
                                                <Run Text="{Binding Label, Mode=OneWay}"/>
                                            </TextBlock>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Total"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}"
                                                           Text="{Binding TotalGb, StringFormat={}{0:F1} GB}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Used"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                                           Text="{Binding UsedGb, StringFormat={}{0:F1} GB}"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Free"/>
                                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                                           Text="{Binding FreeGb, StringFormat={}{0:F1} GB}"/>

                                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Temp"/>
                                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                                           Text="{Binding Temperature, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0}°C'}"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== Battery Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="BatteryRow_Click"
                    Visibility="{Binding Battery.HasBattery, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="80">
                            <TextBlock Text="Battery" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding BatterySummary}" Style="{StaticResource MetricValueStyle}"/>
                        </StackPanel>

                        <comp:SparklineChart x:Name="BatteryChart" Grid.Column="1" Height="40" Margin="4,0"
                            Values="{Binding BatteryValues}"
                            StrokeColor="#FFFFC107" MinValue="0" MaxValue="100"/>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- Battery Detail Panel -->
                    <StackPanel Visibility="{Binding IsBatteryDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Status"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.StatusText}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Time"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.TimeRemaining}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Rate"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.ChargeDischargeRate, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F1} W'}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Voltage"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.Voltage, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F2} V'}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Health"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.BatteryHealth, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F1}%'}"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Design Capacity"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.DesignedCapacity, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} mWh'}"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Full Charge"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Battery.FullChargeCapacity, Converter={StaticResource SensorValue}, ConverterParameter='{}{0:F0} mWh'}"/>
                            </Grid>
                        </Border>

                        <!-- Battery charge bar -->
                        <Grid Margin="0,4,0,0">
                            <Border Background="#20FFFFFF" CornerRadius="3" Height="10"/>
                            <Border CornerRadius="3" Height="10"
                                    HorizontalAlignment="Left"
                                    Width="{Binding Battery.ChargeLevel, Converter={StaticResource PercentToWidthLarge}}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#FFC107"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Battery.IsCharging}" Value="True">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ==================== Network Row ==================== -->
            <Border Style="{StaticResource MetricRowStyle}"
                    MouseLeftButtonDown="NetRow_Click">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="72">
                            <TextBlock Text="Net" Style="{StaticResource MetricLabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                <TextBlock Text="&#xE74B;" FontFamily="Segoe MDL2 Assets" FontSize="8"
                                           Foreground="#FF4CAF50" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                <TextBlock Text="{Binding Net.DownloadFormatted}" Foreground="#DDFFFFFF" FontSize="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                                <TextBlock Text="&#xE74A;" FontFamily="Segoe MDL2 Assets" FontSize="8"
                                           Foreground="#FFFF5722" VerticalAlignment="Center" Margin="0,0,3,0"/>
                                <TextBlock Text="{Binding Net.UploadFormatted}" Foreground="#DDFFFFFF" FontSize="10"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Dual sparklines: download (green) and upload (red) overlaid -->
                        <Grid Grid.Column="1" Height="40" Margin="4,0">
                            <comp:SparklineChart x:Name="NetDownChart"
                                Values="{Binding NetDownValues}"
                                StrokeColor="#FF4CAF50" AutoScale="True"/>
                            <comp:SparklineChart x:Name="NetUpChart"
                                Values="{Binding NetUpValues}"
                                StrokeColor="#FFFF5722" AutoScale="True"/>
                        </Grid>

                        <TextBlock Grid.Column="2" VerticalAlignment="Center"
                                   Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                   Foreground="#60FFFFFF" Margin="4,0"/>
                    </Grid>

                    <!-- Network Detail Panel -->
                    <StackPanel Visibility="{Binding IsNetDetailVisible, Converter={StaticResource BoolToVis}}"
                                Margin="0,6,0,0">
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,6" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Download"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Net.DownloadFormatted}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Upload"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Net.UploadFormatted}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Session Down"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Net.TotalDownloadedFormatted}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource DetailLabel}" Text="Session Up"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource DetailValue}"
                                           Text="{Binding Net.TotalUploadedFormatted}"/>
                            </Grid>
                        </Border>

                        <!-- Adapter list -->
                        <ItemsControl ItemsSource="{Binding Net.Adapters}" Margin="0,4,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#15FFFFFF" CornerRadius="3" Padding="6,3" Margin="0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" Foreground="#B0FFFFFF" FontSize="10"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#60FFFFFF" FontSize="9"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding Speed}" Foreground="#80FFFFFF"
                                                       FontSize="10" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
